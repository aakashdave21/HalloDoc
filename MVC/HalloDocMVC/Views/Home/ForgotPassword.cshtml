@{
    ViewData["Title"] = "Forgot Password Page";
    Layout = "~/Views/Shared/_EmptyLayout.cshtml";
    <link rel="stylesheet" href="~/css/ForgotPassword.css" />
}

<main class="forgot-password-page">
        <div class="background"></div>  

        <div class="forgot-password-details d-flex justify-content-between flex-column" style="height: 100vh;">

            <div class="d-flex justify-content-end p-5">
                    <button class="btn" id="theme-btn">
                        <i class="fa-regular fa-moon"></i>
                        <i class="fa-regular fa-sun" style="display: none;"></i>
                    </button>
            </div>

            <div class="forgot-password-form d-flex justify-content-center align-items-center flex-column " >
                <div class="d-flex justify-content-center">
                    <img src="~/images/logo.png" alt="Logo" style="width: 80%;">
                </div>

                <div class="d-flex mt-5 w-100">
                    <a asp-controller="Home" asp-action="Login" class="back-btn"><i class="fa-solid fa-chevron-left"></i> Back</a>
                </div>
                <h2 class="mt-2">Reset Password</h2>

                    <div class="input-with-icon align-items-center d-flex mb-3 mt-4" style="width: 80%;">
                        <div class="form-floating  flex-grow-1">
                            <input type="email" class="form-control" id="floatingInput" placeholder="name@example.com">
                            <label for="floatingInput">Username</label>
                        </div>

                        <i class="fa-solid fa-user user-icon" ></i>
                        
                    </div>
                    
                    <div class="form-floating mt-3 d-flex flex-column align-items-center" style="width: 80%;">
                        <button class="btn login-btn pt-2 pb-2" style="width: 100%;">
                            Reset Password
                        </button>
                        <a asp-controller="Home" asp-action="Login" class="back-btn mt-5"> <i class="fa-solid fa-chevron-left"></i> Back To Login</a>
                    </div>
            </div>

            <div class="mb-5 forgot-password-footer d-flex justify-content-center">
                <a href="#">Terms & Condition</a> 
                <span class="ms-4 me-4"> | </span>
                <a href="#">Privacy Policy</a>
            </div>

        </div>
    </main>

    