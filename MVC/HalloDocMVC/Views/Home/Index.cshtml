@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/_EmptyLayout.cshtml";
    <link rel="stylesheet" href="~/css/Index.css" />
}


<main class="index-page">
        <div class="index-page-details d-flex justify-content-between flex-column" style="height: 100vh;">

            <div class="d-flex justify-content-end p-5">
                    <button class="btn" id="theme-btn">
                        <i class="fa-regular fa-moon"></i>
                        <i class="fa-regular fa-sun" style="display: none;"></i>
                    </button>
            </div>

            <div class="index-request d-flex justify-content-center align-items-center flex-column " >
                <div class="d-flex justify-content-center">
                    <img src="~/images/logo.png" alt="Logo" style="width: 80%;">
                </div>

                    <div class="index-page-buttons mb-3" style="width: 100%; margin-top: 80px;">
                       <a asp-controller="Home" asp-action="SubmitRequest" class="btn btn-lg d-block mb-4">Submit a Request</a>
                       <a asp-controller="Home" asp-action="Login" class="btn btn-lg d-block">Registered Patient</a>
                    </div>
            </div>

            <div class="mb-5 index-footer d-flex justify-content-center">
                <a href="#">Terms & Condition</a> 
                <span class="ms-4 me-4"> | </span>
                <a href="#">Privacy Policy</a>
            </div>

        </div>
    </main>

