    ViewData["Title"] = "Access Denied";
}
<style>
    
    h1,a{
        color: #007dfe;
        cursor: default;
    }
    h1:hover,a:hover{
        color: red;
    }
    a{
        text-decoration: none;
        cursor: pointer;
    }
</style>

<main class="mt-5">
    <div class="d-flex justify-content-center flex-column w-100 align-items-center h-100">
        <img src="~/images/forbidden.png" alt="forbidden">
