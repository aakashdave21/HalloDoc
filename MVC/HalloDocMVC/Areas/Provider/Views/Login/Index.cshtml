@using HalloDocService.ViewModels;
@model UserLoginViewModel;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Admin Login Page";
    Layout = "~/Views/Shared/_EmptyLayout.cshtml";
    <link rel="stylesheet" href="~/css/AdminLogin.css" />
}
<main class="login-page">
    <section class="container-fluid main-container">
        <div class="row">
            <div class="col-lg-6 d-lg-flex justify-content-center align-items-center login-banner-image d-none">
                <img src="~/images/bg_login.png" alt="login image" style="width: 100%;">
            </div>

            <div class="col-lg-6">
                <div class="login-details d-flex justify-content-between flex-column" style="height: 100%;">

                    <div class="d-flex justify-content-end p-5">
                        <button class="btn" id="theme-btn">
                            <i class="fa-regular fa-moon"></i>
                            <i class="fa-regular fa-sun" style="display: none;"></i>
                        </button>
                    </div>

                    <div class="login-form d-flex justify-content-center align-items-center flex-column">
                        <div class="d-flex justify-content-center">
                            <img src="~/images/logo.png" alt="Logo" style="width: 80%;">
                        </div>

                        <h2 class="mt-5">Login To Your Account</h2>
                        <form asp-area="Provider" asp-action="Index" style="flex-direction: column;
    width: 100%;
    display: flex;
    align-items: center;">
                            <div style="width: 80%;">

                                <div class="input-with-icon align-items-center d-flex mt-4" >
                                    <div class="form-floating  flex-grow-1">
                                        <input asp-for="Email" type="text" class="form-control" id="floatingInput"
                                            placeholder="name@example.com">
                                        <label asp-for="Email" for="floatingInput">Username</label>
                                    </div>
                                    <i class="fa-solid fa-user user-icon"></i>
                                </div>
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <div  style="width: 80%;">

                                <div class="input-with-icon align-items-center d-flex mt-4">
                                    <div class="form-floating flex-grow-1">
                                        <input asp-for="Passwordhash" type="password" class="form-control"
                                            id="Passwordhash" placeholder="Password">
                                        <label asp-for="Passwordhash" for="Passwordhash">Password</label>
                                    </div>

                                    <i class="fa-regular fa-eye eye-icon" onclick="changePasswordView(document.getElementById('Passwordhash'),document.querySelector('.eye-icon'))"></i>

                                </div>
                                <span asp-validation-for="Passwordhash" class="text-danger"></span>
                            </div>

                            <div class="form-floating mt-3 d-flex flex-column align-items-center" style="width: 80%;">
                                <button class="btn login-btn pt-2 pb-2" style="width: 100%;">
                                    Login
                                </button>
                                <a href="#" class="forgot-pwd-link mt-4">Forgot Password ?</a>
                            </div>
                        </form>
                    </div>

                    <div class="mb-5 login-footer d-flex justify-content-center">
                        <a href="#">Terms & Condition</a>
                        <span class="ms-4 me-4"> | </span>
                        <a href="#">Privacy Policy</a>
                    </div>

                </div>
            </div>
        </div>
    </section>
</main>
@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
