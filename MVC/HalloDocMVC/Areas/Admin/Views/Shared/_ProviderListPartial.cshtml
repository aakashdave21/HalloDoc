@{
    int[] pageSizeArrray = { 5, 10, 15 };
}
<table class="table d-md-block d-none" id="provider-table">
    <thead>
        <tr>
            <th style="width: 10%;">Stop Notification</th>
            @{
                if (ViewBag.order == "desc")
                {
                    <th style="white-space: nowrap; cursor: pointer;" id="providerNameHeader">
                        Provider Name
                    </th>
                }
                else
                {
                    <th style="white-space: nowrap; cursor: pointer;" id="providerNameHeader">
                        Provider Name
                    </th>
                }
            }
            <th style="white-space:nowrap;">Role</th>
            <th style="width: 15%;">On Call Status</th>
            <th style="white-space:nowrap;">Status</th>
            <th style="white-space:nowrap; width:20%;">Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.AllPhysicianList)
        {
            <tr>
                @if (item.IsNotificationStopped == true)
                {
                    <td>
                        <input type="checkbox" id="checkbox-@item.Id" value="@item.Id"
                            class="form-check-input selectRow stoppedNotification" style="cursor: pointer;" checked>
                    </td>
                }
                else
                {
                    <td>
                        <input type="checkbox" id="checkbox-@item.Id" value="@item.Id"
                            class="form-check-input selectRow runningNotification" style="cursor: pointer;">
                    </td>
                }
                <td>@item.PhysicianName</td>
                <td>@item.Role</td>
                <td>@item.OnCallStatus</td>
                <td>@item.Status</td>
                <td>
                    <div class="d-flex gap-2">
                        <button class="btn theme-btn" onclick="openContactModal('@item.Id')"> Contact
                        </button>
                        @using (Html.BeginForm("Edit", "Provider", new { area = "Admin" },
                       FormMethod.Post))
                        {
                            <input type="hidden" name="id" value="@item.Id" />
                            <button type="submit" class="btn theme-btn"> Edit
                            </button>
                        }
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
<div class="d-md-none">
    @foreach (var item in Model.AllPhysicianList)
    {
        <div class="accordion" id="accordian-@item.Id">
            <div class="accordion-item">
                <h2 class="accordion-header">
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                        data-bs-target="#panelsStayOpen-collapse-@item.Id" aria-expanded="false">
                        <div class="d-flex justify-content-between w-100">
                            <div>
                                @if (item.IsNotificationStopped == true)
                                {
                                    <p>
                                        <input type="checkbox" id="checkbox-@item.Id" value="@item.Id"
                                            class="form-check-input selectRow stoppedNotification" style="cursor: pointer;" checked>
                                    </p>
                                }
                                else
                                {
                                    <p>
                                        <input type="checkbox" id="checkbox-@item.Id" value="@item.Id"
                                            class="form-check-input selectRow runningNotification" style="cursor: pointer;">
                                    </p>
                                }
                                <p>@item.PhysicianName</p>
                                <p>@item.OnCallStatus</p>

                            </div>
                        
                        </div>
                    </button>
                </h2>
                <div id="panelsStayOpen-collapse-@item.Id" class="accordion-collapse collapse">
                    <div class="accordion-body">
                        <p>@item.Role</p>
                        <p>@item.Status</p>
                        
                    <div class="d-flex gap-2">
                        <button class="btn theme-btn" onclick="openContactModal('@item.Id')"> Contact
                        </button>
                        @using (Html.BeginForm("Edit", "Provider", new { area = "Admin" },
                       FormMethod.Post))
                        {
                            <input type="hidden" name="id" value="@item.Id" />
                            <button type="submit" class="btn theme-btn"> Edit
                            </button>
                        }
                    </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
@* Pagination *@
<div class="d-flex justify-content-between align-items-center mt-2">
    <div>
        <div class="d-flex align-items-center" style="white-space: nowrap;">
            Page : <select class="form-select select-page ms-2 RecordsPageChange"
                onchange="RecordsPageChange()" aria-label="Default select example">
                @{
                    for (int i = 1; i <= Model.TotalPage; i++)
                    {
                        if (Model.CurrentPage == i)
                        {
                            <option value="@i" selected>@i</option>
                        }
                        else
                        {
                            <option value="@i">@i</option>
                        }
                    }
                }
            </select> &nbsp; of @Model.TotalPage
        </div>
    </div>
    <div>
        <div class="d-sm-flex d-none">
            Show Results : @Model.PageRangeStart - @Model.PageRangeEnd Out of
            <span>&nbsp;@Model.TotalCount </span>
        </div>
    </div>
    <div>
        <div class="d-flex align-items-center" style="white-space: nowrap;">
            Show Rows :
            <select class="form-select select-page ms-2 ReqRecordsPageRecordChange" onchange="pageRecordChange()"
                aria-label="Default select example">
                @{
                    foreach (int i in pageSizeArrray)
                    {
                        if (Model.CurrentPageSize == i)
                        {
                            <option value="@i" selected>@i</option>
                        }
                        else
                        {
                            <option value="@i">@i</option>
                        }
                    }
                }
            </select>
        </div>
        <div class="d-flex d-sm-none">
            Show Results : @Model.PageRangeStart - @Model.PageRangeEnd Out of
            <span>&nbsp;@Model.TotalPage</span>
        </div>
    </div>
</div>