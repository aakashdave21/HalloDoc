<div class="table-responsive d-md-block d-none">
    <table class="table">
        <thead>
            <th>Profession</th>
            <th>Business Name</th>
            <th>Email</th>
            <th>Fax Number</th>
            <th>Phone Number</th>
            <th>Business Contact</th>
            <th>Action</th>
        </thead>
        <tbody>
            @foreach(var item in Model.VendorsDetails){
                <tr>
                    <td>@item.ProfessionName</td>
                    <td>@item.BusinessName</td>
                    <td>@item.Email</td>
                    <td>@item.FaxNumber</td>
                    <td>@item.PhoneNumber</td>
                    <td>@item.BusinessContact</td>
                    <td>
                        <div class="d-flex gap-2">
                            <a class="btn theme-btn" asp-area="Admin" asp-controller="Partner" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                            <button onclick="deleteConfirmModal('@item.Id')" class="btn theme-btn">Delete</button>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>


<div class="d-md-none">
    @foreach (var item in Model.VendorsDetails)
    {
        <div class="accordion" id="accordian-@item.Id">
            <div class="accordion-item">
                <h2 class="accordion-header">
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                        data-bs-target="#panelsStayOpen-collapse-@item.Id" aria-expanded="false">
                        <div class="d-flex flex-column w-100">
                            <p>Business Name : @item.BusinessName</p>
                            <p>@item.ProfessionName</p>
                        </div>
                    </button>
                </h2>
                <div id="panelsStayOpen-collapse-@item.Id" class="accordion-collapse collapse">
                    <div class="accordion-body">
                      <div class="d-flex flex-column w-100">
                            <p>Email : @item.Email</p>
                            <p>Fax Number : @item.FaxNumber</p>
                            <p>Phone Number : @item.PhoneNumber</p>
                            <p>Business Name : @item.BusinessName</p>
                            <p>Business Contact : @item.BusinessContact</p>
                            <p>Profession : @item.ProfessionName</p>
                            <div class="d-flex gap-2">
                                <a class="btn theme-btn" asp-area="Admin" asp-controller="Partner" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                                <button onclick="deleteConfirmModal('@item.Id')" class="btn theme-btn">Delete</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>