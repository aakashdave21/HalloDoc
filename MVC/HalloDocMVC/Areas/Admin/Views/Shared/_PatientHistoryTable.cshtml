@{
    int[] pageSizeArrray = { 5, 10, 15 };
}
<div class="table-responsive d-md-block d-none">
    <table class="table">
        <thead>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Phone Number</th>
            <th>Address</th>
            <th>Action</th>
        </thead>
        <tbody>
            @if (((IEnumerable<PatientHistoryView>)Model.PatientHistoryList).Any())
            {
                @foreach (var item in Model.PatientHistoryList)
                {
                    <tr>
                        <td>@item.Firstname</td>
                        <td>@item.Lastname</td>
                        <td>@item.Email</td>
                        <td>@item.PhoneNumber</td>
                        <td>@item.Address</td>
                        <td>
                            @using(Html.BeginForm("ExplorePatient","PatientHistory",new {Area = "Admin"}, FormMethod.Post)){
                                <input type="hidden" name="userId" value="@item.UserId"/>
                                <input type="hidden" name="requestId" value="@item.RequestId"/>
                                <button type="submit" class="btn theme-btn">Explore</button>
                            }
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="6" class="text-center">No records found.</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div class="d-md-none">
    @if (((IEnumerable<PatientHistoryView>)Model.PatientHistoryList).Any())
    {
        @foreach (var item in Model.PatientHistoryList)
        {
            <div class="accordion" id="accordian-@item.Id">
                <div class="accordion-item">
                    <h2 class="accordion-header">
                        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                            data-bs-target="#panelsStayOpen-collapse-@item.Id" aria-expanded="false">
                            <div class="d-flex flex-column w-100">
                                <p>@item.Firstname, @item.Lastname</p>
                                <p>Phone : @item.PhoneNumber</p>
                            </div>
                        </button>
                    </h2>
                    <div id="panelsStayOpen-collapse-@item.Id" class="accordion-collapse collapse">
                        <div class="accordion-body">
                            <div class="d-flex flex-column w-100">
                                <p>Email : @item.Email</p>
                                <p>Address : @item.Address</p>
                                <p>PhoneNumber : @item.PhoneNumber</p>
                                 @using(Html.BeginForm("ExplorePatient","PatientHistory",new {Area = "Admin"}, FormMethod.Post)){
                                <input type="hidden" name="userId" value="@item.UserId"/>
                                <input type="hidden" name="requestId" value="@item.RequestId"/>
                                <button type="submit" class="btn theme-btn">Explore</button>
                            }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <p class="text-center border-bottom border-top p-2">No Records Found</p>
    }
</div>

@* Pagination *@
<div class="d-flex justify-content-between align-items-center mt-2">
    <div>
        <div class="d-flex align-items-center" style="white-space: nowrap;">
            Page : <select class="form-select select-page ms-2 PatientHistoryPageChange"
                onchange="PatientHistoryPageChange()" aria-label="Default select example">
                @{
                    for (int i = 1; i <= Model.TotalPage; i++)
                    {
                        if (Model.CurrentPage == i)
                        {
                            <option value="@i" selected>@i</option>
                        }
                        else
                        {
                            <option value="@i">@i</option>
                        }
                    }
                }
            </select> &nbsp; of @Model.TotalPage
        </div>
    </div>
    <div>
        <div class="d-sm-flex d-none">
            Show Results : @Model.PageRangeStart - @Model.PageRangeEnd Out of
            <span>&nbsp;@Model.TotalCount </span>
        </div>
    </div>
    <div>
        <div class="d-flex align-items-center" style="white-space: nowrap;">
            Show Rows :
            <select class="form-select select-page ms-2 HistoryPageRecordChange" onchange="pageRecordChange()"
                aria-label="Default select example">
                @{
                    foreach (int i in pageSizeArrray)
                    {
                        if (Model.CurrentPageSize == i)
                        {
                            <option value="@i" selected>@i</option>
                        }
                        else
                        {
                            <option value="@i">@i</option>
                        }
                    }
                }
            </select>
        </div>
        <div class="d-flex d-sm-none">
            Show Results : @Model.PageRangeStart - @Model.PageRangeEnd Out of
            <span>&nbsp;@Model.TotalPage</span>
        </div>
    </div>
</div>

