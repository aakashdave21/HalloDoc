@model UserLoginViewModel;

@{
    ViewData["Title"] = "Create Account";
    Layout = "~/Views/Shared/_EmptyLayout.cshtml";
    <link rel="stylesheet" href="~/css/Login.css" />
    string userId = Context.Request.Query["userId"];
    string token = Context.Request.Query["token"];
}

<main class="Create-page login-page ">
    <div class="background-blur-image"></div>

    <div class="login-details d-flex justify-content-between flex-column" style="height: 100vh;">

        <div class="d-flex justify-content-end p-5">
            <button class="btn" id="theme-btn">
                <i class="fa-regular fa-moon"></i>
                <i class="fa-regular fa-sun" style="display: none;"></i>
            </button>
        </div>

        <div class="login-form d-flex justify-content-center align-items-center flex-column ">
            <div class="d-flex justify-content-center">
                <img src="~/images/logo.png" alt="Logo" style="width: 80%;">
            </div>
            <div class="d-flex mt-5 w-100">
                <a asp-area="Patient" asp-controller="Home" asp-action="Index" class="forgot-pwd-link"><i
                        class="fa-solid fa-chevron-left"></i> Back</a>
            </div>

            <h2 class="mt-2">Create Account</h2>

            <form asp-area="Patient" asp-controller="SignUp" asp-action="Index" method="post" id="submitForm" style="flex-direction: column;
    width: 100%;
    display: flex;
    align-items: center;">
                <input for="UserId" name="UserId" type="hidden" id="userId" value="@userId" />
                <input for="UserToken" name="UserToken" type="hidden" id="token" value="@token" />
                <div style="width: 100%;">
                    <div class="input-with-icon align-items-center d-flex mt-4">
                        <div class="form-floating  flex-grow-1">
                            <input type="text" asp-for="Email" class="form-control" id="email"
                                placeholder="name@example.com" readonly>
                            <label for="Email" asp-for="Email">Email</label>
                        </div>
                        <i class="fa-solid fa-user user-icon"></i>
                    </div>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div style="width: 100%;">
                    <div class="input-with-icon align-items-center d-flex mt-4">
                        <div class="form-floating flex-grow-1">
                            <input type="password" asp-for="Passwordhash" class="form-control" name="Passwordhash"
                                id="Passwordhash" placeholder="Password">
                            <label asp-for="Passwordhash" for="Passwordhash">Password</label>
                        </div>
                        <i class="fa-regular fa-eye eye-icon"
                            onclick="changePasswordView(document.getElementById('Passwordhash'),document.querySelector('.eye-icon'))"></i>
                    </div>
                    <span asp-validation-for="Passwordhash" class="text-danger"></span>
                </div>

                <div style="width: 100%;">
                    <div class="input-with-icon align-items-center d-flex mt-4">
                        <div class="form-floating flex-grow-1">
                            <input type="text" class="form-control" name="ConfirmPassword" id="ConfirmPassword"
                                placeholder="Password">
                            <label for="ConfirmPassword">Confirm Password</label>
                        </div>
                        <i class="fa-regular fa-eye" id="cf-icon"
                            onclick="changePasswordView(document.getElementById('ConfirmPassword'),document.querySelector('#cf-icon'))"></i>
                    </div>
                    <span id="confirmPassValidation" class="text-danger"></span>
                </div>


                <div class="form-floating mt-3 d-flex flex-column align-items-center" style="width: 100%;">
                    <button class="btn login-btn pt-2 pb-2" style="width: 100%;" type="button"
                        onclick="createAccount()">
                        Create
                    </button>

                </div>
            </form>

        </div>

        <div class="mb-5 login-footer d-flex justify-content-center">
            <a href="#">Terms & Condition</a>
            <span class="ms-4 me-4"> | </span>
            <a href="#">Privacy Policy</a>
        </div>

    </div>
</main>
<script src="~/js/passwordToggle.js"></script>
<script>
    function createAccount() {
        const passwordField = document.getElementById("Passwordhash").value;
        const confirmPasswordField = document.getElementById("ConfirmPassword").value;
        const confirmPassValidation = document.getElementById("confirmPassValidation");

        if (passwordField !== confirmPasswordField) {
            confirmPassValidation.innerHTML = "Password Not Matched !";
            return;
        }
        confirmPassValidation.innerHTML = "";

        $("#submitForm").submit();
    }
</script>