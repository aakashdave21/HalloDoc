@model UserProfileViewModel;
@{
    ViewData["Title"] = "User Profile Page";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<main class="documents-section container-sm mt-5">
        <div class="d-flex justify-content-end mt-4">
            <a asp-area="Patient" asp-controller="Dashboard" asp-action="Index" class="btn btn-sm back-link"><i class="fa-solid fa-chevron-left"></i> Back</a>
        </div>
        <form asp-action="Edit" method="post" id="myForm">
            <h2 class="mt-5 fw-bold">User Profile</h1>
        
            <div class="user-profile-form border p-4 mt-3 mb-3 rounded shadow">
                <div>
                    <h4>General Information</h4>
                    <div class="row mt-3">
                        <div class="col-md-6 mb-3">
                            <div class="form-floating">
                                <input asp-for="Firstname" type="text" class="form-control" id="fname" placeholder="first name">
                                <label asp-for="Firstname" for="floatingInput">First Name</label>
                              </div>
                              <span asp-validation-for="Firstname" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <div class="form-floating">
                                <input asp-for="Lastname" type="text" class="form-control" id="lname" placeholder="last name">
                                <label asp-for="Lastname" for="floatingInput">Last Name</label>
                              </div>
                              <span asp-validation-for="Lastname" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <div class="form-floating">
                                <input asp-for="Birthdate" type="date" class="form-control" id="dob" placeholder="Date Of Birth">
                                <label asp-for="Birthdate" for="floatingInput">Date Of Birth</label>
                              </div>
                              <span asp-validation-for="Birthdate" class="text-danger"></span>
                        </div>
                    </div>
                </div>
    
                <div class="mt-4">
                    <h4>Contact Information</h4>
                    <div class="row mt-3">
                        <div class="col-md-2 col-4">
                            <div class="form-floating">
                                <select class="form-select" id="floatingSelect" aria-label="Floating label select example">
                                  <option selected value="mobile">Mobile</option>
                                  <option value="phone">Phone</option>
                                  <option value="landline">Landline</option>
                                </select>
                                <label for="floatingSelect">Type</label>
                              </div>
                        </div>
                        <div class="col-md-4 col-8">
                                <div class="form-floating mb-3">
                                    <input asp-for="Mobile" id="Mobile" class="form-control" type="tel" oninput="this.value = this.value.replace(/[^0-9]/g, '')" name="Mobile" />
                                    <input type="hidden" id="phone_hidden" name="full_phone" />
                                  </div>
                                  <span asp-validation-for="Mobile" class="text-danger"></span>
                           
                        </div>
                        <div class="col-md-6 mb-3">
                            <div class="form-floating">
                                <input asp-for="Email" type="email" class="form-control" id="email" placeholder="email" disabled>
                                <label asp-for="Email" for="floatingInput">Email</label>
                              </div>
                              <input asp-for="Email" type="hidden" />
                              <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>
                </div>
    
                <div class="mt-4">
                    <h4>Location Information</h4>
                    <div class="row mt-3">
                        <div class="col-md-6 mb-3">
                            <div class="form-floating">
                                <input asp-for="Street" type="text" class="form-control" id="street" placeholder="street">
                                <label asp-for="Street" for="floatingInput">Street</label>
                              </div>
                              <span asp-validation-for="Street" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <div class="form-floating">
                                <input asp-for="City" type="text" class="form-control" id="city" placeholder="city">
                                <label asp-for="City" for="floatingInput">City</label>
                              </div>
                              <span asp-validation-for="City" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <div class="form-floating">
                                <input asp-for="State" type="text" class="form-control" id="state" placeholder="state">
                                <label asp-for="State" for="floatingInput">State</label>
                              </div>
                              <span asp-validation-for="State" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <div class="form-floating">
                                <input asp-for="Zipcode" type="text" class="form-control" id="zipCode" placeholder="zipCode">
                                <label asp-for="Zipcode" for="floatingInput">Zip Code</label>
                              </div>
                              <span asp-validation-for="Zipcode" class="text-danger"></span>
                        </div>
                    </div>
                </div>
    
                <div class="mt-5 mb-3 d-flex justify-content-end">
                    <div class="section-btns">
                        <button class="btn secondary-theme-btn me-2" type="button" onclick="submitForm()">
                            Edit
                        </button>
                    </div>
                </div>
            
            </div>
        </form>
    </main>

<script>
    $(".sortable").click(function () {
        var column = $(this).data('sort');
        var order = $(this).hasClass('asc') ? 'desc' : 'asc';
        $('.sortable').removeClass('asc desc');
        $(this).addClass(order);
        $(this).find('.sorting-icons').toggleClass('fa-chevron-up fa-chevron-down');
    });
</script>